{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2022"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "rootDir": "./lib",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": false
  },
  "exclude": [
    ".cache/",
    ".temp/",
    "_reports/",
    "node_modules/",
    "scripts/",
    "tests/"
  ]
}
